rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public readable files (e.g., business logo, service images)
    match /public/{allPaths=**} {
      allow read: if true;  // Public assets (logos, background.png)
      allow write: if false;  // Only admins via admin SDK
    }
    
    // User-specific files (profile pics, vehicle photos)
    match /users/{userId}/{allPaths=**} {
      // Users can upload/read own files (e.g., profile.jpg)
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Size/type limits: Images only, max 5MB
      allow write: if request.auth != null && 
                   request.auth.uid == userId &&
                   request.resource.size < 5 * 1024 * 1024 &&  // 5MB limit
                   request.resource.contentType.matches('image/.*');  // Images only
      
      // Admins can manage user files
      allow read, write: if request.auth != null && 
                         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Vehicle-specific files (photos uploaded with vehicles)
    match /vehicles/{vehicleId}/{allPaths=**} {
      // Owner can access own vehicle files; linked via vehicles collection
      allow read, write: if request.auth != null && 
                         (resource.metadata['firebase.storage/objectMetadata/owner'] == request.auth.uid ||
                          exists(/databases/$(database)/documents/vehicles/$(vehicleId)) &&
                          get(/databases/$(database)/documents/vehicles/$(vehicleId)).data.userId == request.auth.uid);
      
      // Size/type limits: Images/PDFs, max 10MB
      allow write: if request.auth != null &&
                   request.resource.size < 10 * 1024 * 1024 &&  // 10MB for docs
                   (request.resource.contentType.matches('image/.*') ||
                    request.resource.contentType == 'application/pdf');
      
      // Admins full access
      allow read, write: if request.auth != null &&
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Admin-only uploads (e.g., service images, backups)
    match /admin/{allPaths=**} {
      allow read: if true;  // Some admin files public (e.g., service images)
      allow write: if request.auth != null &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Deny all other paths (e.g., root uploads)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
